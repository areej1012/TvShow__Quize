<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.areej.fragment.homeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_homeFragment_to_saveLocalFragment"
            app:destination="@id/saveLocalFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.areej.fragment.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" />
    <fragment
        android:id="@+id/saveLocalFragment"
        android:name="com.example.areej.fragment.SaveLocalFragment"
        android:label="fragment_save_local"
        tools:layout="@layout/fragment_save_local" />
</navigation>